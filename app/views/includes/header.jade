nav.navbar.navbar-default(role="navigation")
	.container
		.navbar-header
			button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="movie-header")
				span.sr-only 展开/收缩
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href="/") 天地影视

		#movie-navbar.collapse.navbar-collapse
			ul.nav.navbar-nav
				li.active
					a(href="/") 电影
				li
					a(href="/admin/movie/list") 后台管理
				li.dropdown
					a.dropdown-toggle(href="#", data-toggle="dropdown") 更多操作
						span.caret
					ul.dropdown-menu(role="menu")
						li
							a(href="/admin/movie/new") 新增电影
						li
							a(href="/admin/category/new") 新增电影分类
			ul.nav.navbar-nav.navbar-right
				if user
					li
						a 欢迎您，#{user.username}
					li
						a(href="/logout") 注销
				else
					li
						a(href="#", data-toggle="modal", data-target="#signupModal") 登录
					li
						a |
					li
						a(href="#", data-toggle="modal", data-target="#signinModal") 注册


//- 登录框
#signupModal.modal.fade(tabindex="-1", role="dialog", aria-labelledby="signupModalLabel", aria-hidden="true")
	.modal-dialog
		.modal-content
			form#signupForm(method="post", action="/user/signin")
				.modal-header
					h4 用户登录
				.modal-body
					.form-group
						label.control-label(for="username") 账号
						input#username.form-control.input-lg(name="user[username]")
					.form-group
						label.control-label(for="password") 密码
						input#password.form-control.input-lg(type="password", name="user[password]")
					.form-group
						input.btn.btn-success.btn-lg.btn-block(type="submit", value="登录")

//- 注册框
#signinModal.modal.fade(tabindex="-1", role="dialog", aria-labelledby="signinModalLabel", aria-hidden="true")
	.modal-dialog
		.modal-content
			form#signinForm(method="post", action="/user/signup")
				.modal-header
					h4 新用户注册
				.modal-body
					.form-group
						label.control-label(for="username") 账号
						input#username.form-control.input-lg(name="user[username]")
					.form-group
						label.control-label(for="password") 密码
						input#password.form-control.input-lg(type="password", name="user[password]")
					.form-group
						label.control-label(for="password2") 再次输入密码
						input#password2.form-control.input-lg(type="password")
					.form-group
						input.btn.btn-primary.btn-lg.btn-block(type="submit", value="注册")
script(type="text/javascript", src="/js/validate.js")