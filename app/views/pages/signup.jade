extends ../layout

block content
	.container
		.row
			br
			br
			br
			.col-md-6.col-md-offset-3
				.panel.panel-default
					.panel-heading
						.panel-title 用户注册
					.panel-body
						if message
							.alert.alert-warning #{message}
						form#signinForm(method="post", action="/user/signup")
							.form-group
								label.control-label(for="username") 账号
								input#username.form-control.input-lg(name="user[username]")
							.form-group
								label.control-label(for="password") 密码
								input#password.form-control.input-lg(type="password", name="user[password]")
							.form-group
								label.control-label(for="password2") 再次输入密码
								input#password2.form-control.input-lg(type="password")
							.form-group
								input.btn.btn-primary.btn-lg.btn-block(type="submit", value="注册")
script(type="text/javascript", src="/js/validate.js")